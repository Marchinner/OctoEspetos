<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:OctoEspetos.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OctoEspetos.Views.MainView"
             x:DataType="vm:MainWindowViewModel">
    <UserControl.Styles>
        <Style Selector="Button.NavBtn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="15,10"/>
        </Style>
        <Style Selector="Button.NavBtn:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="60, *">

        <Border Grid.Row="0" Background="#252526" BorderBrush="#333" BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="Auto, *, Auto">
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                    <TextBlock Text="ðŸ¢" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="TitleText" Text="OCTO ESPETOS" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" Foreground="#4CC2FF"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    
                    <Button x:Name="BtnOrder" Classes="NavBtn" Content="Novo Pedido" 
                            Command="{Binding GoToOrderCommand}"/>
                    
                    <Button x:Name="BtnDash" Classes="NavBtn" Content="Dashboard / HistÃ³rico" 
                            Command="{Binding NavigateToDashboardCommand}"/>
                    
                    <Button x:Name="BtnInv" Classes="NavBtn" Content="InventÃ¡rio" 
                            Command="{Binding NavigateToInventoryCommand}"/> </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                    <TextBlock Text="Caixa 01" VerticalAlignment="Center" Foreground="#666" Margin="0,0,15,0" FontSize="12"/>
                    
                    <Button Content="SAIR" Background="#992222" Foreground="White" 
                            FontWeight="Bold" CornerRadius="4" Padding="15,5"
                            Command="{Binding ExitCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <TransitioningContentControl Grid.Row="1" Content="{Binding CurrentView}">
            <TransitioningContentControl.PageTransition>
                <CrossFade Duration="0:0:0.25" />
            </TransitioningContentControl.PageTransition>
        </TransitioningContentControl>

    </Grid>
</UserControl>

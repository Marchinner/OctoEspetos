<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:OctoEspetos.ViewModels"
             xmlns:m="using:OctoEspetos.Models"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
             x:DataType="vm:QuickOrderViewModel"
             x:Class="OctoEspetos.Views.QuickOrderView">
  <Design.DataContext>
        <vm:QuickOrderViewModel/>
    </Design.DataContext>

    <Panel>
    <Grid RowDefinitions="Auto, *">
        
        <Border Grid.Row="0" Background="#252526" Padding="15">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Cliente:" VerticalAlignment="Center" Foreground="#AAA" FontSize="18"/>
                
                <TextBox Text="{Binding ClientName}" 
                         Width="200"
                         FontWeight="Bold" FontSize="18"
                         Background="#333" Foreground="White"
                         BorderThickness="0" Padding="10,8"
                         CornerRadius="5"
                         Watermark="Nome do cliente..."/>
                
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="#4CC2FF" VerticalAlignment="Center" Margin="20,0,0,0" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Grid x:Name="ContentGrid" Grid.Row="1" ColumnDefinitions="*, 300">
            
            <!-- Ãrea de Produtos -->
            <Grid x:Name="ProductArea" Grid.Column="0" RowDefinitions="Auto, *">
                
                <!-- Barra de Categorias -->
                <ScrollViewer Grid.Row="0" 
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled"
                              Margin="15,10,15,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <!-- BotÃ£o "Todos" -->
                        <Button Content="ðŸ“‹"
                                Command="{Binding $parent[UserControl].((vm:QuickOrderViewModel)DataContext).SelectCategoryCommand}"
                                Background="{Binding SelectedCategory, Converter={x:Static ObjectConverters.IsNull}, ConverterParameter=#4CC2FF|#3E3E42}"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Padding="15,10"
                                FontSize="24"
                                CornerRadius="6"/>
                        
                        <!-- Categorias dinÃ¢micas -->
                        <ItemsControl ItemsSource="{Binding Categories}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="m:ProductCategory">
                                    <Button Content="{Binding Name}"
                                            Command="{Binding $parent[UserControl].((vm:QuickOrderViewModel)DataContext).SelectCategoryCommand}"
                                            CommandParameter="{Binding}"
                                            Background="#3E3E42"
                                            Foreground="White"
                                            FontWeight="SemiBold"
                                            Padding="15,10"
                                            FontSize="24"
                                            CornerRadius="6"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
 
                <!-- Produtos -->
                <ScrollViewer Grid.Row="1" Padding="15" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding Products}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="155" ItemHeight="170" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="m:Product">
                            <Button Margin="5" Padding="0"
                                    Command="{Binding $parent[UserControl].((vm:QuickOrderViewModel)DataContext).AddToCartCommand}"
                                    CommandParameter="{Binding}"
                                    Background="#2D2D30" 
                                    CornerRadius="10"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top"
                                    HorizontalContentAlignment="Stretch" 
                                    VerticalContentAlignment="Stretch"
                                    BorderBrush="#3E3E42"
                                    BorderThickness="1"
                                    Height="160">
                                <Grid RowDefinitions="80, *, 35">
                                    <!-- Ãrea para Imagem -->
                                    <Border Grid.Row="0" 
                                            Background="#3E3E42" 
                                            CornerRadius="10,10,0,0">
                                        <TextBlock Text="ðŸ¢" 
                                                   FontSize="32" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"
                                                   Opacity="0.4"/>
                                    </Border>
                                    
                                    <!-- Nome do Produto -->
                                    <Border Grid.Row="1" Padding="6,4">
                                        <TextBlock Text="{Binding Name}" 
                                                   TextWrapping="Wrap" 
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxLines="2"
                                                   FontSize="13" 
                                                   FontWeight="SemiBold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- PreÃ§o -->
                                    <Border Grid.Row="2" 
                                            Background="#1E1E1E" 
                                            CornerRadius="0,0,10,10"
                                            Padding="8,0">
                                        <TextBlock Text="{Binding SellPrice, StringFormat='R$ {0:N2}'}" 
                                                   Foreground="#4CC2FF" 
                                                   FontWeight="Bold"
                                                   FontSize="15"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Painel do Pedido -->
            <Border x:Name="CartArea" Grid.Column="1" Background="#1E1E1E" BorderBrush="#333" BorderThickness="1,0,0,0">
                <Grid RowDefinitions="Auto, *, Auto">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Button Background="Transparent" 
                                Width="60" Height="60"
                                Command="{Binding ToggleCartCommand}"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalAlignment="Center">
                            <TextBlock Text="{Binding CartToggleIcon}" 
                                       FontSize="28" Foreground="#AAA" FontWeight="Bold"/>
                        </Button>
                        <TextBlock Text="PEDIDO" Foreground="#AAA" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding EditingOrderId, StringFormat=' #{0}'}" 
                                   Foreground="#FFA500" FontWeight="SemiBold"
                                   IsVisible="{Binding EditingOrderId, Converter={x:Static ObjectConverters.IsNotNull}}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding Cart}" Background="Transparent" Margin="5,0"
                             Padding="0,0,0,60"
                             IsVisible="{Binding IsCartExpanded}"
                             ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="m:OrderItem">
                                <Border Background="#2D2D30" CornerRadius="6" Padding="8" Margin="0,4">
                                    <StackPanel Spacing="6">
                                        <!-- Nome do Produto (Linha 1) -->
                                        <TextBlock Text="{Binding Product.Name}" 
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"/>

                                        <!-- Controles (Linha 2) -->
                                        <Grid ColumnDefinitions="Auto, *, Auto">
                                            <!-- PreÃ§o -->
                                            <TextBlock Text="{Binding UnitPrice, StringFormat='R$ {0:N2}'}" 
                                                       VerticalAlignment="Center" 
                                                       Foreground="#9CDCFE"
                                                       FontSize="13"
                                                       FontWeight="Bold"/>

                                            <!-- Quantidade e BotÃµes -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="0">
                                                <Button Content="âˆ’" 
                                                        Width="40" Height="40"
                                                        FontSize="18" FontWeight="Bold"
                                                        Background="#444" Foreground="White"
                                                        CornerRadius="4,0,0,4"
                                                        HorizontalContentAlignment="Center"
                                                        VerticalContentAlignment="Center"
                                                        Padding="0"
                                                        Command="{Binding $parent[UserControl].((vm:QuickOrderViewModel)DataContext).DecrementQuantityCommand}"
                                                        CommandParameter="{Binding}"/>
                                                
                                                <Border Background="#333" Width="30" Height="40">
                                                    <TextBlock Text="{Binding Quantity}" 
                                                               Foreground="#4CC2FF" 
                                                               FontWeight="Bold" 
                                                               FontSize="16"
                                                               TextAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <Button Content="+" 
                                                        Width="40" Height="40"
                                                        FontSize="18" FontWeight="Bold"
                                                        Background="#4CC2FF" Foreground="White"
                                                        CornerRadius="0,4,4,0"
                                                        HorizontalContentAlignment="Center"
                                                        VerticalContentAlignment="Center"
                                                        Padding="0"
                                                        Command="{Binding $parent[UserControl].((vm:QuickOrderViewModel)DataContext).IncrementQuantityCommand}"
                                                        CommandParameter="{Binding}"/>
                                                
                                                <!-- Remover (X) -->
                                                <Button Content="âœ•" 
                                                        Width="30" Height="40"
                                                        Foreground="#FF6B6B" 
                                                        Background="Transparent"
                                                        FontSize="12"
                                                        Margin="5,0,0,0"
                                                        Command="{Binding $parent[UserControl].((vm:QuickOrderViewModel)DataContext).RemoveFromCartCommand}"
                                                        CommandParameter="{Binding}"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="2" Background="#252526" Spacing="6" Margin="10">
                        <!-- Total -->
                        <Grid ColumnDefinitions="*, Auto">
                            <TextBlock Text="TOTAL" FontSize="16" Foreground="#AAA" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{Binding TotalAmount, StringFormat='R$ {0:N2}'}" 
                                       FontSize="28" FontWeight="Bold" Foreground="#4CC2FF"/>
                        </Grid>
                        

                        
                        <!-- BotÃµes lado a lado -->
                        <Grid ColumnDefinitions="*, 8, *">
                            <Button Grid.Column="0"
                                    Content="ðŸ’¾ SALVAR (F3)" 
                                    Command="{Binding SaveOpenOrderCommand}"
                                    Background="#FF8C00" Foreground="White" 
                                    FontSize="13" FontWeight="Bold"
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Height="45" CornerRadius="8"/>
                            
                            <Button Grid.Column="2"
                                    Content="ðŸ’° PAGAR (F2)" 
                                    Command="{Binding ShowPaymentModalCommand}"
                                    Background="#28A745" Foreground="White" 
                                    FontSize="13" FontWeight="Bold"
                                    HorizontalAlignment="Stretch" 
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Height="45" CornerRadius="8"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>

    <!-- Modal de ConfirmaÃ§Ã£o de Pagamento -->
    <Border IsVisible="{Binding IsPaymentModalVisible}"
            Background="#80000000"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        <Border Background="#2D2D30" 
                CornerRadius="12"
                Padding="20"
                Width="450"
                MaxHeight="550"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                BoxShadow="0 8 32 0 #40000000">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="15">
                
                <!-- Header -->
                <TextBlock Text="CONFIRMAR PAGAMENTO" 
                           FontSize="22" FontWeight="Bold" 
                           Foreground="#4CC2FF"
                           HorizontalAlignment="Center"/>
                
                <!-- Resumo do Pedido -->
                <Border Background="#1E1E1E" CornerRadius="8" Padding="15">
                    <StackPanel Spacing="8">
                        <Grid ColumnDefinitions="*, Auto">
                            <TextBlock Text="Cliente:" Foreground="#AAA"/>
                            <TextBlock Grid.Column="1" Text="{Binding ClientName}" Foreground="White" FontWeight="SemiBold"/>
                        </Grid>
                        <Grid ColumnDefinitions="*, Auto">
                            <TextBlock Text="Itens:" Foreground="#AAA"/>
                            <TextBlock Grid.Column="1" Text="{Binding Cart.Count}" Foreground="White"/>
                        </Grid>
                        <Separator Background="#444" Height="1" Margin="0,5"/>
                        <Grid ColumnDefinitions="*, Auto">
                            <TextBlock Text="TOTAL:" Foreground="White" FontWeight="Bold" FontSize="18"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding TotalAmount, StringFormat='R$ {0:N2}'}" 
                                       Foreground="#4CC2FF" FontWeight="Bold" FontSize="22"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- MÃ©todo de Pagamento -->
                <Grid ColumnDefinitions="Auto, *">
                    <TextBlock Text="Pagamento:" Foreground="#AAA" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding PaymentMethods}"
                              SelectedItem="{Binding SelectedPaymentMethod}"
                              HorizontalAlignment="Stretch"
                              Background="#333"
                              CornerRadius="6"/>
                </Grid>
                
                <!-- Valor Recebido (apenas para Dinheiro) -->
                <StackPanel Spacing="10" IsVisible="{Binding SelectedPaymentMethod, Converter={x:Static ObjectConverters.Equal}, ConverterParameter='Dinheiro'}">
                    <Grid ColumnDefinitions="Auto, *">
                        <TextBlock Text="Recebido:" Foreground="#AAA" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding AmountReceived}"
                                 Background="#333" Foreground="White"
                                 FontSize="20" FontWeight="Bold"
                                 CornerRadius="6" Padding="12,8"
                                 Watermark="0,00"/>
                    </Grid>
                    <Grid ColumnDefinitions="Auto, *">
                        <TextBlock Text="Troco:" Foreground="#AAA" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding ChangeAmount, StringFormat='R$ {0:N2}'}"
                                   FontSize="24" FontWeight="Bold"
                                   Foreground="{Binding ChangeAmount, Converter={x:Static ObjectConverters.IsNull}, ConverterParameter=#28A745|#FF6B6B}"/>
                    </Grid>
                </StackPanel>
                
                <!-- BotÃµes -->
                <Grid ColumnDefinitions="*, 15, *" Margin="0,10,0,0">
                    <Button Content="âŒ CANCELAR"
                            Command="{Binding CancelPaymentCommand}"
                            Background="#666" Foreground="White"
                            FontWeight="Bold" FontSize="15"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Height="50" CornerRadius="8"/>
                    
                    <Button Grid.Column="2" 
                            Content="âœ… CONFIRMAR"
                            Command="{Binding ConfirmPaymentCommand}"
                            Background="#28A745" Foreground="White"
                            FontWeight="Bold" FontSize="15"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Height="50" CornerRadius="8"/>
                </Grid>
            </StackPanel>
            </ScrollViewer>
        </Border>
    </Border>
    </Panel>
</UserControl>
